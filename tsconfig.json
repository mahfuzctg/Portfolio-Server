{
  "compilerOptions": {
    "target": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": [
    "src/**/*.ts", // Include all TypeScript files in the source directory
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules" // Exclude node_modules folder
  ]
}
